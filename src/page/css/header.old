header {
    position: relative;
    width:100%;
    color: #EEE;
    background:#555;
    top:0;
    z-index: 2900;
    box-shadow: 0 0.3rem 0.3rem rgba(50, 50, 50, 0.15);
}
.header-wrap {
    /*max-width:none;*/
    padding:0 1rem 0 6rem;
    width:100%;
    height:100%;
}

.isMap header {
    height: 5.5rem;
    position: absolute;
    border-bottom: 0.1rem solid #777;
}

.headerTxtLabel {
    float: left;
    line-height: 1.7rem;
    margin-top: 0.8rem;
    margin-left: 0.5rem;
}
.isSingle.headerTxtLabel {
    margin-top: 2.2rem;
}

.isMap .isSingle.headerTxtLabel {
    margin-top: 1.8rem;
}

#headerTxtLabelSmall {
    display:none;
}
.headerLabelShort {
    font-size: 2rem;
    font-weight: 200;
}
.headerLabel {
    font-size:1.4rem;
}
.headerLabelShort {
    font-weight:400;
    font-size: 2.7rem;
    text-transform: uppercase;
}
.isSingle.headerLabelShort {
    font-size: 3rem;
}
/*header:hover {
    background:#000;
    color:#CCC;
    border-bottom: 1px solid #777;

}*/
header a:link, header a:visited{
    color: #FFF;
}
/*header:hover a:link, header:hover a:visited{
    color:#CCC;
}
*/
.headerLabel {
    overflow: visible;
    color : #DDD;
    width: 35rem;
    font-family: 'Titillium Web','Helvetica Neue',Helvetica,Arial,sans-serif;
}
.topMenu-logo {
    width: 70%;
    margin-right: 0;
    padding: 0;
}
.topMenu-logo img {
    border: none;
    margin: 1.2rem 0.5rem 0 1rem;
    padding: 0;
    float: left;
    max-width: 100%;
    width:4.7rem;
    height:4rem;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    background-size: cover;
}
.isMap .topMenu-logo img {
    margin: 0.7rem 0.5rem 0 1rem;
}

@media screen and (max-width: 700px) , screen and (max-height: 500px){
    .headerLabel {
        display:none;
    }
    #headerTxtLabel{
        margin-top:1.8rem;
    }
    header, .isMap header {
        height: 3rem;
    }
    .topMenu-li {
        height:3.7rem;
    }
    #headerTxtLabelSmall {
        display: block;
        margin-left: 0;
    }
    .header-wrap {
        padding:0 1rem 0 4rem;
    }
    
}
